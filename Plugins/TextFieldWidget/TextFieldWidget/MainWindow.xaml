<Window x:Class="TextFieldWidget.AppMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextFieldWidget"
        mc:Ignorable="d"
        Title="DoNotClose" Height="80" Width="250"
        Topmost="True"
        ResizeMode="NoResize">
    <StackPanel Margin="10" FocusManager.FocusedElement="{Binding ElementName=textField}">
        <TextBox x:Name="textField" TextChanged="textField_TextChanged"/>
    </StackPanel>
</Window>
